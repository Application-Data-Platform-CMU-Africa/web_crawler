# ==============================================
# Dataset Crawler API - Environment Variables Template
# Copy this file to .env and fill in your values
# ==============================================

# ----------------------------------------------
# Flask Configuration
# ----------------------------------------------
FLASK_ENV=development
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
SECRET_KEY=your-secret-key-here

# ----------------------------------------------
# Database Configuration
# ----------------------------------------------
DATABASE_URL=postgresql://username:password@localhost/web_crawler_dev
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# ----------------------------------------------
# Redis Configuration
# ----------------------------------------------
REDIS_URL=redis://localhost:6379/0

# ----------------------------------------------
# Celery Configuration
# ----------------------------------------------
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# ----------------------------------------------
# External API (for publishing datasets)
# ----------------------------------------------
EXTERNAL_API_URL=https://api.example.com/api/v1
EXTERNAL_API_EMAIL=your-email@example.com
EXTERNAL_API_PASSWORD=your-password

EXTERNAL_API_URL_TEST=http://localhost:3000/api/v1
EXTERNAL_API_EMAIL_TEST=test-email@example.com
EXTERNAL_API_PASSWORD_TEST=test-password

# ----------------------------------------------
# OpenAI API Key (for classification)
# ----------------------------------------------
OPENAI_API_KEY=sk-your-openai-key-here

# ----------------------------------------------
# Security
# ----------------------------------------------
PASSCODE_HASH=your-sha256-hash-here
API_KEY_EXPIRY_DAYS=365

# ----------------------------------------------
# CORS
# ----------------------------------------------
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ----------------------------------------------
# Crawler Settings
# ----------------------------------------------
MAX_CONCURRENT_CRAWLS=5
CRAWL_TIMEOUT_SECONDS=3600
CRAWL_DOWNLOAD_DELAY=2

# ----------------------------------------------
# Logging
# ----------------------------------------------
LOG_LEVEL=INFO
